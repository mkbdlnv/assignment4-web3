<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link type="text/css" rel="stylesheet" href="/css/style.css">
    <title>Profile</title>
</head>
<body>
    <%- include('partials/header') %>
    <main class="container-fluid d-flex justify-content-center">
        <div id="profile">
            <% users.forEach(user => { %>
            <div class="row">
                <div class="col d-flex align-items-center">
                    <h1><%= user.name + ' ' + user.lastname %></h1>
                </div>
                <div class="col d-flex justify-content-end">   <div id="avatar"><img src="<%= '../' +user.img_path %>" alt="Avatar"></div></div>
                <a href="/user/<%= user.id %>">View profile</a>
            </div>
            <% }); %>
        </div>
    
        <script src="https://kit.fontawesome.com/597061bca4.js" crossorigin="anonymous"></script>
        <script src="scripts/user-profile.js"></script>
        <script src="/js/connect-wallet.js"></script>
    </main>


</body>
</html>
